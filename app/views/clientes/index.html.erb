<p id="notice"><%= notice %></p>

<h1>Listing Clientes</h1>
</BR>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Idade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.id %></td>
        <td><%= cliente.name %></td>
        <td><%= cliente.idade %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td>
          <%= link_to 'Edit', edit_cliente_path(cliente) %>
      </td>
        <td>
          <%= button_to cliente, method: :delete, class: "btn btn-xs btn-danger" do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cliente', new_cliente_path, class:"btn btn-primary"%>
