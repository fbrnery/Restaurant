<p id="notice"><%= notice %></p>

<h1>Listing Restaurantes</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Endereco</th>
      <th>Especialidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurantes.each do |restaurante| %>
      <tr>
        <td><%= restaurante.id %></td>
        <td><%= restaurante.name %></td>
        <td><%= restaurante.endereco %></td>
        <td><%= restaurante.especialidade %></td>
        <td><%= link_to 'Show', restaurante %></td>
        <td><%= link_to 'Edit', edit_restaurante_path(restaurante) %></td>
        <td>
         <%= button_to restaurante, method: :delete, class: "btn btn-xs btn-danger" do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurante', new_restaurante_path, class:"btn btn-primary" %>
